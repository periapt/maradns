#!/bin/sh

# Give localhost the fecf:aff0::1 and fecf:aff0::2 addresses; these
# addresses come from RFC3513 (which has since been made obsolete, but 
# there's not a snowball's chance in hell IANA is ever going to assign
# "site local unicast" IPv6 addresses for anything that matters)
ifconfig lo add fecf:aff0::1
ifconfig lo add fecf:aff0::2
sleep 2

# This is a basic Deadwood test to make sure it works

killall maradns > /dev/null 2>&1 # Don't run this test on Solaris
sleep 2

cat > mararc-IPv6 << EOF
chroot_dir="$( pwd )"
ipv4_bind_addresses="127.0.0.2"
ipv6_bind_address="fecf:aff0::2"
csv2 = {}
csv2["example.com."] = "db.example.com"
EOF


cat > db.example.com << EOF
www.% A 10.1.2.3
black4.% A 10.222.33.44
black6.% AAAA fecf:aff0::3
good.% AAAA fecf:aff0::2
EOF

# OK, test the server
../../../server/maradns.authonly -f mararc-IPv6 > /dev/null 2>&1 &
#../../../server/maradns.authonly -f mararc-IPv6 &
sleep 1

# Now, make sure Deadwood's ip_blacklist works

for BLACKLIST in 10.222.33.44 fecf:aff0::3 ; do

cat > dwood2rc << EOF
chroot_dir="$( pwd )"
bind_address="fecf:aff0::1"
upstream_servers = {}
upstream_servers["."]="fecf:aff0::2"
recursive_acl="::1/128, fecf:aff0::0/32"
ip_blacklist="${BLACKLIST}"
EOF

../../src/Deadwood -f dwood2rc | grep -v version | sed 's/forwarder/cache/' &
sleep 3

echo Blacklist: ${BLACKLIST}

echo
dig @fecf:aff0::1 www.example.com A | \
        grep -v DiG | grep -v WHEN | grep -v time | grep -v HEADER
echo
dig @fecf:aff0::1 black4.example.com A | \
        grep -v DiG | grep -v WHEN | grep -v time | grep -v HEADER
echo
dig @fecf:aff0::1 black6.example.com AAAA | \
        grep -v DiG | grep -v WHEN | grep -v time | grep -v HEADER
echo
dig @fecf:aff0::1 good.example.com AAAA | \
        grep -v DiG | grep -v WHEN | grep -v time | grep -v HEADER
echo

killall Deadwood
sleep 2

done

killall maradns.authonly
rm mararc-*
rm db.example.com
rm dwood2rc
ifconfig lo del fecf:aff0::1
ifconfig lo del fecf:aff0::2
